{
    "id": "prompt_receiver_module",
    "name": "Prompt Receiver",
    "version": "1.1.0",
    "icon_file": "icon.gif",
    "author": "Flowork Dev",
    "description": "Module penerima pesan instan dari Prompt Sender GUI. Berfungsi sebagai gerbang input text.",
    "category": "Utility",
    "type": "ACTION",
    "entry_point": "processor.PromptReceiver",
    "tier": "architect",
    "behaviors": [],
    "requires_services": ["kernel"],
    "properties": [],
    "ui_schema": [
        {
            "component": "header",
            "label": "Debug Input"
        },
        {
            "id": "prompt",
            "type": "textarea",
            "label": "Manual Prompt",
            "component": "textarea",
            "description": "Input manual untuk testing tanpa GUI.",
            "icon": "mdi-console-line",
            "placeholder": "Ketik pesan test disini..."
        }
    ],
    "output_ports": [
        {"name": "success", "display_name": "Success"},
        {"name": "error", "display_name": "Error"}
    ],
    "output_schema": [
        {
            "name": "data.original_prompt",
            "type": "string",
            "description": "Teks prompt asli yang diterima."
        },
        {
            "name": "data.status",
            "type": "string",
            "description": "Status penerimaan (received/failed)."
        }
    ]
}
